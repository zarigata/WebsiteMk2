{
  "compilerOptions": {
    "target": "ES6", // // Specifies the ECMAScript target version //
    "module": "ES6", // // Specifies the module system //
    "outDir": "./js", // // Redirect output structure to the directory //
    "rootDir": ".", // // Specifies the root directory of input files. Use "." if TS files are in root or mixed. Use "./ts" if all TS files are in a 'ts' subfolder. //
    "strict": true, // // Enable all strict type-checking options //
    "esModuleInterop": true, // // Enables emit interoperability between CommonJS and ES Modules //
    "skipLibCheck": true, // // Skip type checking of declaration files //
    "forceConsistentCasingInFileNames": true, // // Disallow inconsistently-cased references to the same file //
    "sourceMap": true, // // Generates corresponding '.map' file //
    "allowJs": true, // // Allow JavaScript files to be compiled //
    "lib": ["ES2016", "DOM"] // // Specify library files to be included in the compilation //
  },
  "include": [
    "main.ts", // // Assuming main.ts is in the root as per user's open files. Adjust if moved to a 'ts' folder //
    "**/*.ts" // // Include all .ts files in the project //
  ],
  "exclude": [
    "node_modules",
    "js" // // Exclude the output directory to prevent re-compilation issues //
  ]
}
// // CONFIGURATION :: TypeScript Compiler Options //
// :: TARGET :: ES6 (Modern browsers, GitHub Pages compatible) //
// :: MODULE :: ES6 (For modern JavaScript module system) //
// :: OUTDIR :: ./js (Compiled JavaScript files will be placed here) //
// :: ROOTDIR :: . (Assuming TS files like main.ts are in the root for now) //
// :: STRICT :: true (Enforces higher code quality) //
// :: ESMODULEINTEROP :: true (Better compatibility with different module types) //
// :: END CONFIGURATION //
